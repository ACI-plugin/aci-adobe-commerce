<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-recurring-order-link"
                   after="customer-account-navigation-orders-link">
                <arguments>
                    <argument name="path" xsi:type="string">acipayment/recurring/orders</argument>
                    <argument name="label" xsi:type="string" translate="true">My Recurring Orders</argument>
                    <argument name="sortOrder" xsi:type="number">210</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
